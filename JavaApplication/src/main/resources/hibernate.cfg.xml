
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/trail</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="connection.pool_size">1</property>
        
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="enable_lazy_load_no_trans">true</property>
        <property name="current_session_context_class">thread</property> 

        
        <mapping class="com.main.model.Employee"></mapping>  
        <mapping class="com.main.model.Address"></mapping>
        <mapping class="com.main.model.Project"></mapping>  

    </session-factory>
</hibernate-configuration>